!!!
%html
  = render "layouts/header"
  %section.bg-dark.pt-9.pb-11.d-none.d-md-block
    .container
      .row.align-items-center
        .col
          %h2.font-weight-bold.text-white.mb-2 Playbook
          %p.font-size-lg.text-white-75.mb-0 Information on how you can digitally bootstrap your nonprofit.

  %section.mb-8.mt-md-n6
    .container
      .row
        .col-12.col-md-3
          .card.card-bleed.border-bottom.border-bottom-md-0.shadow-light-lg
            .collapse.d-md-block
              .card-body
                %h6.font-weight-bold.text-uppercase.mb-3 Learn
                %ul.card-list.list.text-gray-700.mb-6
                  = render PlaybookLinkComponent.new(text: "Home", url: page_path("playbook"))
                  = render PlaybookLinkComponent.new(text: "Website", url: page_path("playbook/website"))
                  = render PlaybookLinkComponent.new(text: "Advertising", url: page_path("playbook/advertising"))
                  = render PlaybookLinkComponent.new(text: "Email Hosting", url: page_path("playbook/email_hosting"))
                  = render PlaybookLinkComponent.new(text: "Social Media", url: page_path("playbook/social_media"))
        .col-12.col-md-9
          .card.shadow-light-lg
            .card-body
              = yield
  = render "layouts/footer"
