!!!
%html
  = render "layouts/header"
  %section.bg-dark.pt-9.pb-11.d-none.d-md-block
    .container
      .row.align-items-center
        .col
          %h2.font-weight-bold.text-white.mb-2 Playbook
          %p.font-size-lg.text-white-75.mb-0 Information on how you can digitally bootstrap your nonprofit.

  %section.mb-8.mt-md-n6
    .container
      .row
        .col-12.col-md-3
          .card.card-bleed.border-bottom.border-bottom-md-0.shadow-light-lg
            .collapse.d-md-block
              .card-body
                %h6.font-weight-bold.text-uppercase.mb-3 Learn
                %ul.card-list.list.text-gray-700.mb-6
                  %li.list-item.active
                    =link_to "Website", "#", class: "list-link text-reset"
                  %li.list-item
                    =link_to "Advertising", "#", class: "list-link text-reset"
                  %li.list-item
                    =link_to "Email Hosting", "#", class: "list-link"
                  %li.list-item
                    =link_to "Social Media", "#", class: "list-link"
        .col-12.col-md-9
          .card.shadow-light-lg
            .card-body
              = yield
  = render "layouts/footer"
